{
  "name": "react-sticky-kit",
  "version": "0.1.2",
  "type": "module",
  "description": "A lightweight, flexible React sticky container and item component library supporting multiple sticky modes, advanced layouts, and edge cases.",
  "keywords": [
    "react",
    "sticky",
    "react-sticky",
    "sticky-container",
    "sticky-item",
    "z-index"
  ],
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint src demo --ext .ts,.tsx,.js,.jsx",
    "pub": "tsx ./scripts/publish.ts"
  },
  "files": [
    "dist"
  ],
  "main": "dist/react-sticky.umd.js",
  "module": "dist/react-sticky.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/react-sticky.es.js",
      "require": "./dist/react-sticky.umd.js",
      "types": "./dist/index.d.ts"
    }
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/node": "^22.15.18",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@vitejs/plugin-react": "^4.0.0",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "sass": "^1.88.0",
    "tsx": "^4.19.4",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.30.1",
    "vite": "^4.0.0",
    "vite-plugin-dts": "^4.5.4"
  }
}
